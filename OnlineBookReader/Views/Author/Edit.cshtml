@model OnlineBookReader.Models.Author

@{
    ViewData["Title"] = "Edit Author";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Sửa tác giả</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Tên tác giả</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên tác giả" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Bio" class="control-label">Tiểu sử</label>
                    <input asp-for="Bio" class="form-control" placeholder="Nhập tiểu sử tác giả" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Chỉnh sửa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
